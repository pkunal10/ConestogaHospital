@{
    ViewBag.Title = "AdmitPatientList";
}

<!DOCTYPE html>

<html ng-app="admitPatientList">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Token List</title>

    <script src="~/Content/Scripts/dirPagination.js"></script>

    <script src="~/Content/Modules/AdmitPatientListModule.js"></script>
    <script src="~/Content/Controllers/AdmitPatientListController.js"></script>
    <script src="~/Content/Services/AdimtPatientListService.js"></script>


</head>
<body ng-cloak>
    <div growl></div>
    <div ng-controller="AdmitPatientCntrl">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">Admit Patients</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-3">
                        <input type="text" ng-model="searchTb" class="form-control" placeholder="Search" /><br />
                    </div>
                </div>
                <div class="table-responsive table-bordered">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Patient Name</th>                                
                                <th>Doctor Name</th>
                                <th>Room No</th>
                                <th>Admit Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="patient in patientList | filter : searchTb">
                                <td>{{$index+1}}</td>
                                <td>{{patient.PatientName}}</td>                                
                                <td>{{patient.DoctorName}}</td>
                                <td>{{patient.RoomNo}}</td>
                                <td>{{patient.DisplayAdmitDate}}</td>
                                <td><i class="btn btn-success fas fa-sign-out-alt" title="Discharge Patient" ng-click="dischargePatient(patient.AdmitDetailId)"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: #ECEFF1; z-index: 30001; opacity: .8; filter: alpha(opacity=70); display: none">
                    <p style="position: absolute; top: 30%; left: 45%; color: #000; font-weight:bold;font-size:18px;text-align:center">
                        <img src="~/Content/images/8.gif"><br />
                        please wait...
                    </p>
                </div>
            </div>
        </div>

    </div>


</body>
</html>

